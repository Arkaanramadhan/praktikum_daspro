program lapangan;
uses crt;
var
    panjang, lebar, luas_lapangan, keliling_lapangan : integer;
    
 begin
    clrscr;

    writeln ('input');
    writeln ('');

    write   ('panjang   :');
    readln  (panjang);
    write   ('lebar     :');
    readln  (lebar);

    luas_lapangan :=  panjang * lebar;
    keliling_lapangan :=   2 * panjang + 2 * lebar;

    writeln ('');
    writeln ('output');
    writeln ('');
    writeln ('Luas lapangan : ', Luas_lapangan,' meter' );
    writeln ('Keliling lapangan : ', keliling_lapangan, ' meter');
    writeln ('');

    end.

 
